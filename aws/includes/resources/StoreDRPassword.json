{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "StorePasswordLambda": { "Type": "String" },
        "BucketId": { "Type": "String" },
        "VaultDRPassword": { "Type": "String" }
    },
    "Resources": {
        "StoreDRPassword": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Version": "1.0",
            "Properties": {
                "ServiceToken": {
                    "Ref": "StorePasswordLambda"
                },
                "BucketId": {
                    "Ref": "BucketId"
                },
                "PlainText": {
                    "Ref": "VaultDRPassword"
                }
            }
        }
    },
    "Outputs": {
        "FileId": {
            "Value": { "Fn::GetAtt": ["StoreDRPassword", "FileId"] }
        }
    }
}