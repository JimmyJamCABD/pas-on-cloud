{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "DeployBucket": { "Type": "String" },
        "InstanceRole": { "Type": "String" },
        "AdminPasswordFileId": { "Type": "String" }
    },
    "Resources": {
        "ComponentS3DeployBucketPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "ComponentInstancesDeployBucketAccess",
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "s3:GetObject",
                                "s3:GetObjectVersion",
                                "s3:DeleteObject",
                                "s3:DeleteObjectVersion"
                            ],
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "DeployBucket"
                                        },
                                        "/",
                                        {
                                            "Ref": "AdminPasswordFileId"
                                        }
                                    ]
                                ]
                            }
                        }
                    ]
                },
                "Roles": [
                    {
                        "Ref": "InstanceRole"
                    }
                ]
            }
        }
    }
}